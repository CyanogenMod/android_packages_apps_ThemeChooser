<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_browse_height"
    android:paddingStart="@dimen/cards_padding"
    android:paddingEnd="@dimen/cards_padding"
    android:paddingTop="@dimen/cards_top_bottom_padding"
    android:paddingBottom="@dimen/cards_top_bottom_padding"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/theme_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:elevation="@dimen/cards_elevation">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@color/offwhite">
            <ImageView android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:id="@+id/icon_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/cards_internal_padding"
                android:paddingRight="@dimen/cards_internal_padding">
            </LinearLayout>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/title_author_background" >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="@dimen/cards_texts_padding"
                android:paddingTop="@dimen/cards_texts_padding"
                android:textSize="@dimen/cards_titles_size" />

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/title"
                android:layout_marginTop="@dimen/cards_subtitles_top_margin"
                android:paddingStart="@dimen/cards_texts_padding"
                android:paddingBottom="@dimen/cards_subtitles_bottom_padding"
                android:textSize="@dimen/cards_subtitles_size" />

            <TextView
                android:id="@+id/designed_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/title"
                android:layout_marginTop="@dimen/cards_subtitles_top_margin"
                android:paddingEnd="@dimen/cards_texts_padding"
                android:paddingBottom="@dimen/cards_subtitles_bottom_padding"
                android:text="@string/designed_for_cm11"
                android:textSize="@dimen/cards_subtitles_size"
                android:textColor="@color/designed_for_color"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
